<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuctionGate.Resources.Views.ItemDetails"
             BackgroundColor="{StaticResource Gray100}">

    <Grid RowDefinitions="Auto,*">

        <Grid Grid.Row="0" 
              Background="{StaticResource Primary}"
              Padding="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Text="â†"
                    FontSize="20"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    Clicked="OnBackButtonClicked"/>

            <Label Grid.Column="1" 
                   Text="AuctionGate"
                   TextColor="White"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
        </Grid>

        <ScrollView Grid.Row="1">
            <Grid Padding="16" RowSpacing="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" ColumnDefinitions="*,*" ColumnSpacing="16">
                    <Frame Grid.Column="0" 
                           BackgroundColor="White"
                           Padding="16"
                           CornerRadius="12"
                           HasShadow="True">
                        <VerticalStackLayout Spacing="16">
                            <Image Source="{Binding Item.ImageSource}"
                                   HeightRequest="400"
                                   Aspect="AspectFill"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Column="1" 
                           BackgroundColor="White"
                           Padding="24"
                           CornerRadius="12"
                           HasShadow="True">
                        <VerticalStackLayout Spacing="16">
                            <Label Text="{Binding Item.Name}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}"/>

                            <Frame BackgroundColor="{StaticResource Gray100}"
                                   Padding="24"
                                   CornerRadius="8"
                                   HasShadow="False">
                                <VerticalStackLayout Spacing="12">
                                    <Label Text="{Binding Item.CurrentBid, StringFormat='${0:F2}'}"
                                           FontSize="32"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Primary}"/>

                                    <Frame BackgroundColor="{StaticResource Info}"
                                           Padding="12,8"
                                           CornerRadius="8"
                                           HasShadow="False">
                                        <Label Text="{Binding Item.TimeLeft}"
                                               TextColor="White"/>
                                    </Frame>

                                    <VerticalStackLayout Spacing="4">
                                        <Entry Placeholder="Enter your name"
                                               Text="{Binding UserName}"
                                               Keyboard="Text">
                                            <Entry.Triggers>
                                                <DataTrigger TargetType="Entry"
                                                            Binding="{Binding HasNameError}"
                                                            Value="True">
                                                    <Setter Property="TextColor" Value="Red" />
                                                    <Setter Property="BackgroundColor" Value="#FFF5F5" />
                                                </DataTrigger>
                                            </Entry.Triggers>
                                        </Entry>

                                        <Label Text="{Binding NameErrorMessage}"
                                               TextColor="Red"
                                               FontSize="12"
                                               IsVisible="{Binding HasNameError}"/>
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Spacing="4">
                                        <Entry Placeholder="Enter your bid amount"
                                               Text="{Binding BidAmount}"
                                               Keyboard="Numeric">
                                            <Entry.Triggers>
                                                <DataTrigger TargetType="Entry"
                                                            Binding="{Binding HasError}"
                                                            Value="True">
                                                    <Setter Property="TextColor" Value="Red" />
                                                    <Setter Property="BackgroundColor" Value="#FFF5F5" />
                                                </DataTrigger>
                                            </Entry.Triggers>
                                        </Entry>

                                        <Label Text="{Binding ErrorMessage}"
                                               TextColor="Red"
                                               FontSize="12"
                                               IsVisible="{Binding HasError}"/>
                                    </VerticalStackLayout>

                                    <Button Text="Place Bid Now"
                                            Command="{Binding SubmitBidCommand}"
                                            BackgroundColor="{StaticResource Primary}"
                                            TextColor="White"
                                            HeightRequest="50"
                                            CornerRadius="8"
                                            Margin="0,8,0,0"/>
                                </VerticalStackLayout>
                            </Frame>

                            <Label Text="{Binding Item.Description}"
                                   TextColor="{StaticResource Gray700}"
                                   LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>